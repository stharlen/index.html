<script>
const totalNumbers = 100;
const valorPorNumero = 10;
const pixKey = "stharlen1@gmail.com";
let selectedNumbers = [];
let tempoRestante = 300;
let countdown;

let reservedNumbers = JSON.parse(localStorage.getItem("reservados")) || [];

const numbersDiv = document.getElementById("numbers");

function atualizarContador(){
document.getElementById("contador").innerText =
"üéüÔ∏è N√∫meros vendidos: " + reservedNumbers.length + " / 100";
}

for (let i = 1; i <= totalNumbers; i++) {
    const div = document.createElement("div");
    div.className = "number";
    div.innerText = i.toString().padStart(2, '0');
    if(reservedNumbers.includes(i)){
        div.classList.add("reserved");
    }
    div.onclick = () => selecionarNumero(div, i);
    numbersDiv.appendChild(div);
}
atualizarContador();

function selecionarNumero(element, number) {
    if (reservedNumbers.includes(number)) return;
    if (selectedNumbers.length === 0) iniciarTemporizador();

    if (selectedNumbers.includes(number)) {
        selectedNumbers = selectedNumbers.filter(n => n !== number);
        element.classList.remove("selected");
    } else {
        selectedNumbers.push(number);
        element.classList.add("selected");
    }
}

function iniciarTemporizador(){
clearInterval(countdown);
tempoRestante = 300;
countdown = setInterval(()=>{
let min = Math.floor(tempoRestante/60);
let seg = tempoRestante%60;
document.getElementById("timer").innerText =
"‚è≥ "+min.toString().padStart(2,'0')+":"+seg.toString().padStart(2,'0');

document.getElementById("progressBar").style.width =
(tempoRestante/300*100)+"%";

tempoRestante--;
if(tempoRestante<0){
clearInterval(countdown);
liberarNumeros();
}
},1000);
}

function liberarNumeros(){
alert("Tempo expirado!");
document.querySelectorAll(".number.selected")
.forEach(el=>el.classList.remove("selected"));
selectedNumbers=[];
}

function finalizarCompra(){
if(selectedNumbers.length===0)return;

clearInterval(countdown);

selectedNumbers.forEach(n=>reservedNumbers.push(n));
localStorage.setItem("reservados",JSON.stringify(reservedNumbers));
atualizarContador();

let total = selectedNumbers.length*valorPorNumero;

let qr = `https://api.qrserver.com/v1/create-qr-code/?size=200x200&data=PIX:${pixKey}|VALOR:${total}`;

document.getElementById("resultado").innerHTML=`
<p>Total: R$ ${total},00</p>
<p>Chave Pix: ${pixKey}</p>
<div class="qr">
<img src="${qr}">
</div>
`;

selectedNumbers=[];
location.reload();
}

/* CARROSSEL */
let slide=0;
const slides=document.querySelectorAll(".carousel img");
const dots=document.querySelectorAll(".indicators span");

setInterval(()=>{
slides[slide].classList.remove("active");
dots[slide].classList.remove("active");
slide=(slide+1)%slides.length;
slides[slide].classList.add("active");
dots[slide].classList.add("active");
},3000);
</script>

